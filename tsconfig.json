{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["tauri-plugin-sql-api/dist-js/index.d.ts"],
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@composables/*": ["./src/composables/*"],
      "@store/*": ["./src/store/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "vite.config.ts",
    "unocss.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
